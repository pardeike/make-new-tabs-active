{
  "name": "Make New Tabs Active",
  "short_name": "MakeNewTabsActive",
  "description": "Bring every new tab to the front - auto-focus tabs, stop background openings, keep browsing flow uninterrupted.",
  "version": "1.0.0",
  "version_name": "Focus new tabs instantly",
  "manifest_version": 3,
  "incognito": "split",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Make New Tabs Active: click to toggle",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-enabled": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Option+Shift+F"
      },
      "description": "Toggle Make New Tabs Active on/off"
    },
    "snooze-5": {
      "suggested_key": {
        "default": "Alt+Shift+5",
        "mac": "Option+Shift+5"
      },
      "description": "Snooze for 5 minutes"
    }
  }
}
